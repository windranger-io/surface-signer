{
  "name": "signer-extension",
  "version": "0.0.0",
  "description": "Delegated Signer",
  "private": true,
  "types": "dist/background.d.ts",
  "main": "dist/background.js",
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "buffer": "^6.0.3",
    "eth-keyring-controller": "^7.0.2",
    "ethers": "^5.7.1",
    "metamask-extension-provider": "^3.0.0",
    "postcss": "^8.4.17",
    "postcss-import": "^14.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-shadow": "^19.0.3",
    "tailwindcss": "^3.1.1",
    "web3": "^1.7.3",
    "web3-core": "^1.7.3"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "@types/postcss-import": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "assert": "^2.0.0",
    "browserify": "^17.0.0",
    "browserify-css": "^0.15.0",
    "copy-webpack-plugin": "^11.0.0",
    "crypto-browserify": "^3.12.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "https-browserify": "^1.0.0",
    "husky": "^8.0.1",
    "os-browserify": "^0.3.0",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "ts-node": "^10.7.0",
    "tsc": "^2.0.4",
    "typescript": "4.6.4",
    "url": "^0.11.0",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "prettier": "prettier --write ./src",
    "lint": "tsc --noEmit && eslint --ext .tsx,.ts,.js ./src",
    "build:tailwind": "tailwindcss build -i src/styles.css -c ./tailwind.config.js -o dist/styles.css",
    "build:index": "browserify dist/index.js -o dist/index.js",
    "build:script": "browserify dist/script.js -o dist/script.js",
    "build:background": "browserify dist/background.js -o dist/background.js",
    "build:manifest": "cp src/manifest.json dist/manifest.json",
    "build:html": "find ./src -name \"*.html\" -exec cp '{}' dist/ \\;",
    "build": "tsc && yarn build:tailwind && yarn build:index && yarn build:script && yarn build:background && yarn build:manifest && yarn build:html"
  },
  "browserify": {
    "transform": [
      "browserify-css"
    ]
  }
}
